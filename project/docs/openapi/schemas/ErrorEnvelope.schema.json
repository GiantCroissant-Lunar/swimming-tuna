{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ErrorEnvelope",
  "type": "object",
  "description": "Standardised error response body returned on 4xx/5xx responses.",
  "required": [
    "error"
  ],
  "properties": {
    "error": {
      "type": "string",
      "description": "Human-readable error message.",
      "examples": [
        "task not found",
        "invalid action id"
      ]
    },
    "taskId": {
      "type": [
        "string",
        "null"
      ],
      "description": "Task identifier associated with the error, when applicable."
    },
    "actionId": {
      "type": [
        "string",
        "null"
      ],
      "description": "Action identifier associated with the error, when applicable."
    },
    "reasonCode": {
      "type": [
        "string",
        "null"
      ],
      "description": "Machine-readable reason code.",
      "examples": [
        "not_found",
        "invalid_state",
        "actor_unavailable"
      ]
    }
  }
}
