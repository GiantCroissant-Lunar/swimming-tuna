{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TaskSummary",
  "type": "object",
  "description": "Lightweight task representation used in list responses.",
  "required": [
    "taskId",
    "title",
    "status",
    "updatedAt"
  ],
  "properties": {
    "taskId": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "status": {
      "$ref": "TaskState.schema.json"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "error": {
      "type": [
        "string",
        "null"
      ]
    }
  }
}
