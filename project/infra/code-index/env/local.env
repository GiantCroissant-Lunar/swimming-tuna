# Code Index - Local Development Environment

# Network binding
HOST_BIND_IP=127.0.0.1

# Code Index Service
CODE_INDEX_PORT=8080

# ArcadeDB Connection (shared with main project)
ARCADEDB_URL=http://arcadedb:2480
ARCADEDB_DATABASE=swarm_assistant
ARCADEDB_USERNAME=root
ARCADEDB_PASSWORD=playwithdata  # pragma: allowlist secret
ARCADEDB_IMAGE_TAG=25.9.1
ARCADEDB_HTTP_PORT=2480
ARCADEDB_BINARY_PORT=2424

# Embedding Configuration
# BAAI/bge-small-en-v1.5: 384 dimensions, fast, good quality
# BAAI/bge-base-en-v1.5: 768 dimensions, better quality, slower
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
EMBEDDING_DIMENSION=384

# Chunking Configuration
CHUNK_MAX_TOKENS=512
CHUNK_OVERLAP_TOKENS=50

# Source Code Path (for volume mounting)
SOURCE_CODE_PATH=../../dotnet

# Logging
LOG_LEVEL=info
